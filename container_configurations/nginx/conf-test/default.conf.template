upstream php-handler {
    server admin_php:9000;
}

server {
    listen       80;
    listen  [::]:80;
    server_name  ${DOMAIN};

    index  index.php;
    root /var/www/html;

    # Remove X-Powered-By, which is an information leak
    fastcgi_hide_header X-Powered-By;
    add_header X-Content-Type-Options "nosniff" always;
    add_header Cache-Control no-cache;
    
    location = / {
        rewrite ^/(.*)$ /template.php?target=index$1 last;
    }
    
    rewrite ^/edit/(.*)$ /template.php?target=edit_user&uuid=$1 last;
    rewrite ^/login(.*)$ /template.php?target=login$1 last;
    rewrite ^/logout(.*)$ /template.php?target=logout$1 last;
    rewrite ^/messages(.*)$ /template.php?target=messages$1 last;
    rewrite ^/reports(.*)$ /template.php?target=reports$1 last;
    rewrite ^/rooms(.*)$ /template.php?target=rooms$1 last;
    rewrite ^/settings(.*)$ /template.php?target=settings$1 last;
    rewrite ^/textures(.*)$ /template.php?target=textures$1 last;
    rewrite ^/user(.*)$ /template.php?target=user$1 last;

    location ~ \.php$ {
        try_files $uri = 404;
        fastcgi_split_path_info ^(.+\.php)(/.+)$;
        fastcgi_pass    php-handler;
        fastcgi_index index.php;
        include fastcgi_params;
        fastcgi_param REQUEST_URI $request_uri;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        fastcgi_param PATH_INFO $fastcgi_path_info;
    }

    location /api/room/access {
        rewrite ^/api/room/access(.*)$ /api/access.php$1 last;
    }

    location /api/check-user {
        rewrite ^/api/check-user/(.*)$ /api/check_user.php?token=$1 last;
    }

    location /api/map {
        rewrite ^/api/map(.*)$ /api/map.php$1 last;
    }

    location /api/login-url {
        rewrite ^/api/login-url/(.*)$  /api/login.php?token=$1 last;
    }
    
    location /api/ban {
        rewrite ^/api/ban(.*)$ /api/ban.php$1 last;
    }
    
    location /api/report {
        rewrite ^/api/report(.*)$ /api/report.php$1 last;
    }

    location /api/room/sameWorld {
        rewrite ^/api/room/sameWorld(.*)$ /api/sameWorld.php$1 last;
    }
}
