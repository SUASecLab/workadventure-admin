{
    "require": {
        "ramsey/uuid": "^4.2",
        "mongodb/mongodb": "^1.13",
        "twbs/bootstrap": "5.2.0",
        "components/jquery": "3.6.0"
    },
    "scripts": {
        "post-install-cmd": [
            "rm -rf js/bootstrap",
            "cp -R vendor/twbs/bootstrap/dist/js js/bootstrap",
            "rm -rf css/bootstrap",
            "cp -R vendor/twbs/bootstrap/dist/css css/bootstrap",
            "rm -rf js/ajax",
            "mkdir js/ajax",
            "cp -R vendor/components/jquery/jquery.min.js js/ajax"
        ],
        "post-update-cmd": [
            "rm -rf js/bootstrap",
            "cp -R vendor/twbs/bootstrap/dist/js js/bootstrap",
            "rm -rf css/bootstrap",
            "cp -R vendor/twbs/bootstrap/dist/css css/bootstrap",
            "rm -rf js/ajax",
            "mkdir js/ajax",
            "cp -R vendor/components/jquery/jquery.min.js js/ajax"
        ]
    },
    "require-dev": {
        "phpstan/phpstan": "^1.8"
    }
}
